{
  "version": "1.0.0",
  "name": "@connext/browser-sdk-monorepo",
  "description": "Monorepo for Browser SDK",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/connext/browser-sdk.git"
  },
  "author": "Connext & Friends",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/connext/browser-sdk/issues"
  },
  "homepage": "https://github.com/connext/browser-sdk#readme",
  "scripts": {
    "bootstrap:iframe": "cd iframe-frontend && npm install",
    "bootstrap:example": "cd example-frontend && npm install",
    "bootstrap:frontend": "run-s bootstrap:iframe bootstrap:example",
    "bootstrap:packages": "lerna bootstrap --hoist",
    "bootstrap": "npm install && run-s bootstrap:packages bootstrap:frontend",
    "clean:build": "lerna exec -- rm -rf dist",
    "clean:plock": "lerna exec -- rm -rf package-lock.json",
    "clean:modules": "lerna exec -- rm -rf node_modules",
    "clean:iframe": "cd iframe-frontend && rm -rf node_modules",
    "clean:example": "cd example-frontend && rm -rf node_modules",
    "clean:frontend": "run-s clean:iframe clean:example",
    "clean:packages": "run-s clean:build clean:plock clean:modules",
    "clean:all": "run-s clean:frontend clean:packages",
    "build": "lerna run build",
    "test": "lerna run test",
    "lint": "eslint -c './.eslintrc' --fix 'packages/*/**/*.ts'",
    "check": "run-s clean:build lint build test",
    "start:iframe": "cd iframe-frontend && BROWSER=none PORT=3030 npm run start",
    "start:example": "cd example-frontend && PORT=3040 npm run start",
    "start:frontend": "concurrently \"npm run start:iframe\" \"npm run start:example\"",
    "start": "run-s check start:frontend"
  },
  "devDependencies": {
    "@types/bn.js": "4.11.6",
    "@types/jest": "25.1.1",
    "@types/node": "13.7.0",
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "@typescript-eslint/parser": "2.20.0",
    "concurrently": "^5.3.0",
    "eslint": "5.16.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.18.3",
    "eslint-plugin-standard": "4.0.1",
    "husky": "4.2.1",
    "lerna": "^3.22.1",
    "npm-run-all": "4.1.5",
    "tsdx": "0.12.3",
    "tslib": "1.10.0",
    "typescript": "3.7.5",
    "webpack": "4.41.6",
    "webpack-cli": "3.3.11"
  }
}
